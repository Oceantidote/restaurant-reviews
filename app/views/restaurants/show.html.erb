<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Stars:</strong>
  <%= @restaurant.stars %>
</p>


<p>
  <strong>Reviews</strong>
</p>


<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.content %> <%= link_to "delete", review_path(review), method: :delete, data: { confirm: "Are you sure"} %></li>
  <% end %>

</ul>

<%= link_to "Write Review", new_restaurant_review_path(@restaurant)  %>
<%= link_to "See Chef", chef_name_restaurant_path(@restaurant)  %>
<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Back', restaurants_path %>
